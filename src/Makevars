PKG_CPPFLAGS=-I./lib/ssdeep-2.14.1/include
PKG_LIBS=./libfuzzy.a

all: config.h clean

config.h:
	cd ./lib/ssdeep-2.14.1/ && ./configure && make
	cp ./lib/ssdeep-2.14.1/.libs/libfuzzy.a .
	cp ./lib/ssdeep-2.14.1/config.h .
	cp ./lib/ssdeep-2.14.1/fuzzy.h .

clean:
	# rm -Rf config.h $(OBJECTS)
	# rm -Rf $(SHLIB) $(OBJECTS)
